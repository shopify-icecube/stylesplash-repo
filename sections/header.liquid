  "label": "Display topbar" 
  },
  {
  "type":"checkbox",
  "id": "display_currency",
  "label": "Display Currency" 
  },
  {
  "type":"checkbox",
  "id": "display_search",
  "label": "Display Search" 
  },

   {
  "type": "checkbox",
  "id": "display_minicart",
  "label": "Display minicart"
  },

  {
  "type": "checkbox",
  "id": "display_wishlist",
  "label": "Display wishlist"
  },
  {
  "type": "text",
  "id": "offerhead",
  "label": "Offer",
